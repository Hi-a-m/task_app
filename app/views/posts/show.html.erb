<h3>スケジュール詳細</h3>

<table>

  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>

  <tr>
    <th>開始日</th>
    <td><%= @post.start_at.strftime("%Y年%m月%d日") %></td>
  </tr>


  <tr>
    <th>更新日時</th>
    <td><%= @post.updated_at.strftime("%Y年%m月%d日%H時%M分") %></td>
  </tr>

  <tr>
    <th>終日</th>
   <td>
      <% if @post.is_all_day %>
        <strong>○</strong>
      <% end %>
    </td>
  </tr>

  <tr>
    <th>スケジュールメモ</th>
   <td>
      <pre><%= @post.memo %></pre>
    </td>
  </tr>
  

</table>


  <ul>
    <li><%= link_to "スケジュール一覧に戻る", posts_path %></li>
    <li><%= link_to "スケジュールを編集する", edit_post_path(@post.id) %></li>
    <li><%= link_to "スケジュールを削除", post_path, method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
  </ul>


<div class = footer>
  本日の日付：<%= Date.today.strftime("%Y年%m月%d日") %>
</div>


